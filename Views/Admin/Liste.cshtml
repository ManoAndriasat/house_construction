    <div id="content-wrapper" class="d-flex flex-column">
    
        <div id="content">
            <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow"></nav>
            <div class="container-fluid">
                
            <div class="container">
                <div class="card shadow mb-4">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                              @if (ViewBag.payementDetails != null)
                                {
                                <thead>
                                    <tr>
                                        <th>Id Devise Client</th>
                                        <th>Users</th>
                                        <th>Date</th>
                                        <th>Total</th>
                                        <th>Reste</th>
                                        <th>Payer</th>
                                        <th>%</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var deviseClient in ViewBag.payementDetails)
                                    {
                                            <tr >
                                            <td>@deviseClient.IdDeviseClient</td>
                                            <td>@deviseClient.Users</td>
                                            <td>@deviseClient.Date</td>
                                            <td>@deviseClient.Total.ToString("0.00")</td>
                                            <td>@deviseClient.Reste.ToString("0.00")</td>
                                            <td>@deviseClient.Payer.ToString("0.00")</td>
                                        @if(@deviseClient.Pourcentage < 50){
                                            <th style="background:red">@deviseClient.Pourcentage.ToString("F2")</th>
                                        }else if(@deviseClient.Pourcentage >50){
                                            <th style="background:green">@deviseClient.Pourcentage.ToString("F2")</th>
                                        }else{
                                            <th>@deviseClient.Pourcentage.ToString("F2")</th>
                                        }
                                        <td><a href="/Admin/DetailsDevise?idDeviseClient=@deviseClient.IdDeviseClient">View</a></td>
                                        </tr>
                                    }
                                </tbody>

                                }
                                else
                                {
                                    <p>Aucune devise client trouv√©e.</p>
                                }

                            </table>
                        </div>
                    </div>
                </div>
            </div>
